<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    tools:context=".HistoricalSiteDirectionsFragment"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="bottom"
    android:id="@+id/Details"
    android:background="#a4dded">
    <TextView
        android:id="@+id/tvDistanceHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:text="Directions Fragment :o"
        android:textSize="16sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="via summary"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@color/cardview_dark_background"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llStep">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvShowSteps"
                android:layout_margin="10sp"
                android:paddingHorizontal="10sp"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tvStartEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="start to end"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@color/cardview_dark_background"
        />








</LinearLayout>




</LinearLayout>