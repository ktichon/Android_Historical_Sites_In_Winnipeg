<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HistoricalSiteDetailsFragment"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:id="@+id/Details"
        android:background="@drawable/border"
        >
        <TextView
            android:id="@+id/tvNameAndBuild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:text="Name"
            android:textSize="16dp"
            android:layout_margin="10px"/>
        <TextView
            android:id="@+id/tvBuildDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="build date"
            android:textSize="16dp"
            android:layout_margin="10px"
            android:textColor="@color/cardview_dark_background"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Address"
                android:textSize="14dp"
                android:layout_margin="10px"
                android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="14dp"
                    android:layout_margin="10px"
                    android:textColor="@color/cardview_dark_background"/>

            <ImageButton
                android:id="@+id/btnDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_directions_18_by_18" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0pt"
            android:id="@+id/llExtendedInfo"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/llWebView"
                >
                <WebView
                    android:id="@+id/wvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/llLinkInfo">
                >
                <Button
                    android:id="@+id/btnShortLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Short Link"
                    android:textSize="14dp"
                    android:layout_margin="10px"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/btnLongLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Long Link"

                    android:textSize="14dp"
                    android:layout_margin="10px"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/btnGoogleLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Google Link"

                    android:textSize="14dp"
                    android:layout_margin="10px"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>




</LinearLayout>
